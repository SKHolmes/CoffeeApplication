<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/darkorange">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"    >

    <TextView
        android:id="@+id/vayamos"
        android:text="VAYAMOS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:textAlignment="center"
        android:textSize="42sp"
        android:textColor="@color/header"
        />

    <ImageButton
        android:id="@+id/coffeeButton"
        android:layout_margin="32dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/vayamos"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/coffee"
        android:background="@null"
        />

    <TextView
        android:id="@+id/catchPhrase"
        android:text="@string/catchPhrase"
        android:layout_margin="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/coffeeButton"
        android:layout_alignParentRight="true"
        android:onClick="sendToHome"/>
</RelativeLayout>

</ScrollView>